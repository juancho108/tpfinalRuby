<% if current_user %>
<%= display_error %>
    <div class="col-xs-4 ">
        </br>
        </br>
        <a href="/players/games"><input type="button" class="btn btn-primary btn-lg btn-block" value="CREAR PARTIDA"></a>
        <input type="button" class="btn btn-primary btn-lg btn-block" onClick="history.go(0)" value="REFRESH"> 
    </div>
    <div class="list-group col-xs-4">
        <h3>Games as Player 1</h3>
        <% @games_as_p1.each do |e| %>
            <a href="/players/<%= p @player_id %>/games/<%= p e.id %>" class="list-group-item ">
                <% if e.winner == current_user %>
                    <span class="glyphicon glyphicon-thumbs-up"></span> Partida vs <%= e.player2.name %> (Won!) 
                <% elsif e.winner == e.player2 %>
                    <span class="glyphicon glyphicon-thumbs-down"></span> Partida vs <%= e.player2.name %> (Lost)
                <% elsif e.turn_player == nil %> 
                    <span class="glyphicon glyphicon-adjust"></span> Partida vs <%= e.player2.name %> (Wating)
                <% else %>
                    <span class="glyphicon glyphicon-registration-mark"></span> Partida vs <%= e.player2.name %> (Ready | Turn: <%= e.turn_player.name %>)
                <% end %>
            </a>
        <% end %>
    </div>
    <div class="list-group col-xs-4">
        <h3>Games as Player 2</h3>
        <% @games_as_p2.each do |e| %>
            <a href="/players/<%= p @player_id %>/games/<%= p e.id %>" class="list-group-item ">
                <% if e.winner == current_user %>
                    <span class="glyphicon glyphicon-thumbs-up"></span> Partida vs <%= e.player1.name %> (Won!) 
                <% elsif e.winner == e.player1 %>
                    <span class="glyphicon glyphicon-thumbs-down"></span> Partida vs <%= e.player1.name %> (Lost)
                <% elsif e.turn_player == nil %> 
                    <span class="glyphicon glyphicon-adjust"></span> Partida vs <%= e.player1.name %> (Wating)
                <% else %>
                    <span class="glyphicon glyphicon-registration-mark"></span> Partida vs <%= e.player1.name %> (Ready | Turn: <%= e.turn_player.name %>)
                <% end %>
            </a>
        <% end %>
    </div>
<% end %>

