<style type="text/css">

.tg  {border-collapse:collapse;border-spacing:0;}
.tg td{font-family:Arial, sans-serif;font-size:14px;border-style:solid;border-width:1px;overflow:hidden;word-break:normal;}
.tg th{font-family:Arial, sans-serif;font-size:14px;font-weight:normal;padding:17px 20px;border-style:solid;border-width:1px;overflow:hidden;word-break:normal;}
.tg .tg-s6z2{text-align:center}
.tg .tg-jhgd{background-color:#3166ff}

.boton{
padding:50px 50px;
background-color: #87CEFA
}

<% if current_user %>
  <h2>Puts your ships in position</h2>
  <form class="form-horizontal" action="/players/games/" method="POST">
      <input name="_method" value="put" type="hidden"/>
      
      <table class="tg">
        <tr>
          <th class="tg-s6z2"></th>
            <% (1..@gameboard.size).each do |e| %>
               <th class="tg-s6z2"><%= e %></th> 
            <% end %>          
        </tr>


      </table>
      <div class="col-xs-10">
          <button type="submit" class="btn btn-primary">Enviar</button>
      </div>
  </form>
<% end %>

